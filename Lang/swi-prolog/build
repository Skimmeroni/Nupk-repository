#/bin/sh -e 

PRETTY_NAME=swi-prolog
MAJOR=9
MINOR=3
PATCH=28
VERSION=9.3.28

mkdir temporary-builddir
DESTDIR="$PWD/temporary-builddir"

curl --location --remote-name --skip-existing https://www.swi-prolog.org/download/devel/src/swipl-$VERSION.tar.gz

gzip -cd swipl-$VERSION.tar.gz | tar -x
cd swipl-$VERSION

cmake -B build \
	-D CMAKE_BUILD_TYPE=Release \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D INSTALL_DOCUMENTATION=OFF \
	-D INSTALL_TESTS=OFF \
	-D BUILD_TESTING=OFF \
	-D USE_GMP=ON \
	-D MULTI_THREADED=ON \
	-D SWIPL_INSTALL_PREFIX=/usr/lib/swipl \
	-D SWIPL_INSTALL_PKGCONFIG=/usr/lib/pkgconfig \
	-D SWIPL_PACKAGES_ARCHIVE=OFF \
	-D SWIPL_PACKAGES_BASIC=ON \
	-D SWIPL_PACKAGES_BDB=OFF \
	-D SWIPL_PACKAGES_JAVA=OFF \
	-D SWIPL_PACKAGES_ODBC=OFF \
	-D SWIPL_PACKAGES_PCRE=OFF \
	-D SWIPL_PACKAGES_SSL=OFF \
	-D SWIPL_PACKAGES_TERM=ON \
	-D SWIPL_PACKAGES_TIPC=OFF \
	-D SWIPL_PACKAGES_GUI=OFF \
	-D SWIPL_PACKAGES_YAML=OFF \
	-G Ninja

cmake --build   build
DESTDIR=$DESTDIR cmake --install build --strip

mkdir -p "$DESTDIR/usr/share/LICENSES"
mv "$DESTDIR/usr/lib/swipl/LICENSE" "$DESTDIR/usr/share/LICENSES/swi-prolog.license"

doas chown -R root:root $DESTDIR
doas sh -c "tar -zcC $DESTDIR . | gzip > ../swi-prolog@$VERSION.tar.gz"
