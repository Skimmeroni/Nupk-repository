#!/bin/sh -e

PRETTY_NAME=vi
MAJOR=
MINOR=
PATCH=
VERSION=git

mkdir temporary-builddir
DESTDIR=temporary-builddir

git clone https://github.com/kyx0r/nextvi.git
cd nextvi.git

export CFLAGS="$CFLAGS -static" 

CC=cc ./cbuild.sh

install -Dm755 vi "$DESTDIR/usr/bin/vi"
strip --strip-unneeded "$DESTDIR/usr/bin/vi"

su
chown -R root:root $DESTDIR
tar -c -C $DESTDIR . | gzip > ../nextvi@$VERSION.tar.gz
exit
