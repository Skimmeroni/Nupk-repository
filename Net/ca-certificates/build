#!/bin/sh -e

PRETTY_NAME=ca-certificates
MAJOR=2025
MINOR=11
PATCH=04
VERSION=2025-11-04

mkdir temporary-builddir
DESTDIR="$PWD/temporary-builddir"

curl --location --remote-name --skip-existing https://curl.se/ca/cacert-$VERSION.pem

install -Dm644 cacert-$VERSION.pem "$DESTDIR/etc/ssl/cert.pem"

doas chown -R root:root $DESTDIR
doas sh -c "tar -zcC $DESTDIR . | gzip > ca-certificates@$VERSION.tar.gz"
