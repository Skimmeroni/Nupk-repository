#!/bin/sh -e

PRETTY_NAME=wayland-protocols
MAJOR=1
MINOR=36
PATCH=
VERSION=1.36

mkdir temporary-builddir
DESTDIR=temporary-builddir

curl --location --remote-name --skip-existing https://gitlab.freedesktop.org/wayland/wayland-protocols/-/releases//downloads/wayland-protocols-$VERSION.tar.xz

xz -cd wayland-protocols-$VERSION.tar.xz | tar -x
cd wayland-protocols-$VERSION

meson setup \
	-Dprefix=/usr \
	-Ddatadir=lib \
	-Dbuildtype=release \
	-Dtests=false \
	build

meson -C build compile
meson -C build install -d "$DESTDIR"

su
chown -R root:root $DESTDIR
cd $DESTDIR
tar -c * | gzip > ../wayland-protocols@$VERSION.tar.gz
exit
