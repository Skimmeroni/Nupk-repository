#!/bin/sh -e

PRETTY_NAME=mtdev
MAJOR=1
MINOR=1
PATCH=7
VERSION=1.1.7

mkdir temporary-builddir
DESTDIR="$PWD/temporary-builddir"

curl --location --remote-name --skip-existing https://bitmath.org/code/mtdev/mtdev-.tar.bz2
bzip2 -cd mtdev-$VERSION.tar.bz2 | tar -x
cd mtdev-$VERSION

./configure --prefix=/usr

make
make DESTDIR=$DESTDIR install-strip

find $DESTDIR -type f -name '*.la' -delete

doas chown -R root:root $DESTDIR
doas sh -c "tar -zcC $DESTDIR . | gzip > ../mtdev@$VERSION.tar.gz"
